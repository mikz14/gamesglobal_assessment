        xmlns:local="clr-namespace:gamesglobal_assessment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="WheelCanvas">
            <Image x:Name="WheelImage" Source="C:\Users\lab_services_student\Downloads\wheelSpin.png" Width="300" Height="300" Canvas.Left="50" Canvas.Top="50"/>

            <Button Name="SpinButton" Content="Spin" Width="100" Height="30" Canvas.Left="350" Canvas.Top="400" Click="SpinButton_Click"/>

